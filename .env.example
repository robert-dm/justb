# MongoDB
MONGODB_URI=mongodb://localhost:27017/justb

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Public (exposed to browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Cloudinary (for image uploads)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=justb_menu_items

# Google Maps (for address selection with interactive maps)
# Browser key - restricted to HTTP referrers (your domains)
# Required APIs: Maps JavaScript API, Places API, Geocoding API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_browser_api_key

# Server key - restricted to Geocoding API only (optional, for fallback geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_server_api_key
